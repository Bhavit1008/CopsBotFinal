<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".chat.MainActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_edt"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_above="@+id/txtName"
            android:layout_height="80dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#fff"
            android:src="@drawable/police"
            android:id="@+id/botLogo"
            />

        <TextView
            android:layout_above="@+id/edtLocation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select the Place of the incident."
            android:textSize="24sp"
            android:id="@+id/txtName"/>

        <EditText
            android:layout_width="240dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="Enter Location"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:id="@+id/edtLocation"
            android:layout_above="@+id/btnLocation"
            />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLocation"
            android:text="send"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            app:chipBackgroundColor="#fff"
            app:chipStrokeWidth="1dp"
            android:textColor="@color/colorPrimary"
            app:chipStrokeColor="@color/colorPrimary"/>

        <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
            android:id="@+id/progress_bar_location"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="false"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            app:backgroundColor="#fff"
            app:progressColor="@color/colorAccent"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</ScrollView>